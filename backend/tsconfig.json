{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "types.d.ts"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"],
  "ts-node": {
    "files": true
  }
}
